<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/list_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/list_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/list_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textStyle="italic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/userUpdateDelete"
            android:visibility="gone"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_update_foreground"
                android:layout_weight=".5"
                android:id="@+id/list_update"
                android:contentDescription="user update"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_foreground"
                android:layout_weight=".5"
                android:id="@+id/list_delete"
                android:contentDescription="user update"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

